@{
    ViewData["Title"] = "Browse Storefronts";
}

@model Storefront;

<div class="row mt-5 mb-3">
    <div class="col-2">

    </div>
    <div class="col-10">
        <h1 class="display-4">@Model.Title</h1>
        <p>@Model.Description</p>
    </div>
</div>
<div class="row">
    <div class="col-2">
        <p class="mb-1">Search:</p>
        <input class="form-control mb-1" type="text">
        <input class="btn btn-primary" type="submit" value="Filter">
    </div>
    <div class="col-10">
        <h1 class="display-6 mb-3">Products:</h1>
        <div class="w-100 d-flex gap-3 flex-wrap">
            @{
                foreach(var product in Model.Inventory)
                {
                    <div class="text-center d-flex flex-column gap-2">
                        <a href="/products/@product.ProductId"><img class="img-thumbnail" style="width: 200px; height: auto;" src="~/images/No_image_available.png"></a>
                        <a href="/products/@product.ProductId">@product.Name</a>
                        <p>$@product.Price.ToString("#.##")</p>
                        <a href="/cart/add/@product.ProductId">Add to Cart</a>
                    </div>
                }
            }
        </div>
    </div>
</div>