@{
    ViewData["Title"] = "Add Payment Method";
}

@model Payment;

<h1 class="display-4 mb-5">Add a Payment Method</h1>
<form asp-action="SavePayment" asp-controller="Payment">
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="Name">Payment Name (optional):</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-4">
            <small><span class="text-danger" asp-validation-for="Name"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="NameOnCard">Name On Card:</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="NameOnCard">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-4">
            <small><span class="text-danger" asp-validation-for="NameOnCard"></span></small>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label class="col-form-label" asp-for="Company">Company:</label>
        </div>
        <div class="col-auto">
            <select class="form-select" asp-for="Company">
                <option value="Visa">Visa</option>
                <option value="MasterCard">MasterCard</option>
                <option value="Discover">Discover</option>
                <option value="American Express">American Express</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="Number">Card Number:</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Number">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-4">
            <small><span class="text-danger" asp-validation-for="Number"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="Expiration">Expiration:</label>
        </div>
        <div class="col-auto">
            <input type="date" class="form-control" asp-for="Expiration">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-4">
            <small><span class="text-danger" asp-validation-for="Expiration"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="CVV">CVV:</label>
        </div>
        <div class="col-1">
            <input class="form-control" asp-for="CVV">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-4">
            <small><span class="text-danger" asp-validation-for="CVV"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="Zipcode">Billing Zipcode:</label>
        </div>
        <div class="col-2">
            <input class="form-control" asp-for="Zipcode">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-4">
            <small><span class="text-danger" asp-validation-for="Zipcode"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-4 d-flex justify">
            <input class="btn btn-secondary" type="submit" value="Add">
        </div>
    </div>
</form>